{
  "include": ["src/*"],
  "compilerOptions": {
    "target": "es5",
    "noEmit": true,
    "noImplicitAny": true,
    "module": "ES2020",
      
    "jsx": "react",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": "./src/",
    "paths": {
      "adapters/*":["./adapters/*"],
      "assets/*":["./assets/*"],
      "components/*":["./components/*"],
      "ports/*":["./ports/*"],
      "models/*":["./models/*"],
      "pages/*":["./pages/*"],
      "services/*":["./services/*"],
      "utilities/*":["./utilities/*"]
    }
  }
}